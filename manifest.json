{
  "manifest_version": 2,

  "name": "Biomelange",
  "description": "This extension will show latest developments and research opportunities related to biotech and biomedical industry.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
    
    "background": {
    "scripts": ["background.js"]
  },
  
    "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["myscript.js"]
    }
  ]
}
